doctype html
html(lang="zh-TW")
  head
    title 台南民宿 -【季節村落】
    include partials/head

  body
    include partials/header
    .carousel-container
      each item, index in self.htmlWebpackPlugin.options.landing
        .bg-image.carousel-item(style="background-image: url("+item+")")

    .container.full-width
      div.landing(style="background-image: url(./assets/imgs/landing-autumn.png)")
        .intro
          h2 POETRY
          h2 秋晨︎◼︎和風︎︎︎︎◼︎詩意
          p=self.htmlWebpackPlugin.options.setting.intro
        p.subintro=self.htmlWebpackPlugin.options.setting.subintro
      include partials/footer
